# MQTT Configuration
# MQTT broker for receiving tool status from NEMO backend and distributing to ESP32 displays
MQTT_BROKER=10.0.0.31
MQTT_PORT=1883
MQTT_USE_SSL=false
MQTT_USERNAME=
MQTT_PASSWORD=

# Display Configuration
# Timezone offset in hours from UTC (e.g., -7 for Pacific Time, -5 for Eastern Time)
TIMEZONE_OFFSET_HOURS=-7

# Maximum character length for user names on display (truncate if longer)
MAX_NAME_LENGTH=13

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# NEMO API Configuration (required for automatic tool mapping generation)
# The VM server fetches tool list from this endpoint on startup to build tool_mappings.yaml
NEMO_API_URL=https://nemo.stanford.edu/api/tools/
NEMO_TOKEN=                        # Add your NEMO API token here
# Optional: use Bearer if your API expects "Authorization: Bearer <token>" (default is Token)
# NEMO_AUTH_SCHEME=Token
# Optional: if your NEMO uses a custom header for the token (e.g. X-Api-Key), set it here;
# we'll send that header with the token value instead of Authorization: Token/Bearer
# NEMO_AUTH_HEADER=X-Api-Key

# Tool Mappings Configuration
# Tool ID to name mappings are in tool_mappings.yaml (auto-generated on startup if NEMO_API_URL and NEMO_TOKEN are set)
