# MQTT Configuration
# MQTT broker for receiving tool status from NEMO backend and distributing to ESP32 displays
MQTT_BROKER=10.0.0.31
MQTT_PORT=1883
MQTT_USE_SSL=false
MQTT_USERNAME=
MQTT_PASSWORD=

# Display Configuration
# Timezone offset in hours from UTC (e.g., -7 for Pacific Time, -5 for Eastern Time)
TIMEZONE_OFFSET_HOURS=-7

# Maximum character length for user names on display (truncate if longer)
MAX_NAME_LENGTH=13

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# NEMO API Configuration
# API endpoint and authentication for fetching tool data
NEMO_API_URL=https://nemo.stanford.edu/api/tools/
NEMO_TOKEN=85bbef0d4a9adb5fb99c8bedba3a678fba601fd9

# Tool Mappings Configuration
# Tool ID to name mappings are configured in tool_mappings.yaml
# No environment variables needed - all mappings come from the YAML file
